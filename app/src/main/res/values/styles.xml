<resources xmlns:tools="http://schemas.android.com/tools">
    <attr name="windowBackground" format="reference" />
    <attr name="accentColor" format="reference" />
    <attr name="cardColor" format="reference" />
    <attr name="iconColor" format="reference" />
    <attr name="progressBackgroundColor" format="reference" />
    <attr name="progressDrawable" format="reference" />
    <attr name="progressDrawableWithBackground" format="reference" />
    <attr name="textColorPrimary" format="reference" />
    <!--<attr name="textColor" format="reference" />-->
    <attr name="ripple_color" format="reference" />
    <!--分割颜色-->
    <attr name="deliverColor" format="reference" />
    <!-- Base application theme. -->
    <style name="AppTheme" parent="AppThemeRed" />
    <!-- 网易红为主色调 -->
    <style name="AppThemeRed" parent="Theme.AppCompat.Light.NoActionBar">
        <!--选中状态icon的颜色和字体颜色-->
        <item name="colorPrimary">@color/colorTheme</item>
        <item name="colorPrimaryDark">@color/colorTheme</item>
        <item name="colorAccent">@color/colorTheme</item>
        <item name="android:windowSoftInputMode">stateHidden</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowAnimationStyle">@style/default_animation</item>
        <!--正常状态下字体颜色和icon颜色-->
        <item name="textColorPrimary">@color/color_Main_Body</item>
        <item name="android:textColor">@color/color_Main_Body</item>
        <item name="subtitleTextColor">@color/half_black</item>
        <item name="android:actionMenuTextColor">@color/black</item>

        <item name="android:windowBackground">@color/background</item>
        <item name="windowBackground">@color/background</item>
        <item name="accentColor">@color/black</item>
        <item name="iconColor">@color/black</item>
        <item name="cardColor">@android:color/white</item>
        <item name="progressBackgroundColor">@color/white</item>
        <item name="progressDrawable">@drawable/progress_drawable</item>
        <item name="progressDrawableWithBackground">@drawable/progress_drawable_withbackground
        </item>
        <item name="android:windowActionBarOverlay">true</item>
        <item name="android:windowTranslucentStatus">true</item>

<!--        <item name="android:popupMenuStyle">@style/PopupMenuDayStyle</item>-->
<!--        <item name="android:tabWidgetStyle">@style/CustomTabLayout.Light</item>-->
    </style>
    <!-- 默认Activity跳转动画 -->
    <style name="default_animation" mce_bogus="1" parent="@android:style/Animation.Activity">
        <item name="android:activityOpenEnterAnimation">@anim/activity_up_in</item>
        <item name="android:activityOpenExitAnimation">@anim/activity_up_out</item>
        <item name="android:activityCloseEnterAnimation">@anim/activity_down_in</item>
        <item name="android:activityCloseExitAnimation">@anim/activity_down_out</item>
    </style>
    <!-- 避免启动白色背景 -->
    <style name="AppThemeSplash" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:windowNoTitle">true</item>
        <item name="android:background">@drawable/ic_splash</item>
        <item name="android:windowFullscreen">true</item>
        <item name="android:windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>
    <!--只有上一页面退出时有动画-->
    <style name="default_animation_down" mce_bogus="1" parent="@android:style/Animation.Activity">
        <item name="android:activityCloseEnterAnimation">@anim/activity_down_in</item>
        <item name="android:activityCloseExitAnimation">@anim/activity_down_out</item>
    </style>

    <!--打开图片详情时有动画-->
    <style name="default_animation_up" mce_bogus="1" parent="@android:style/Animation.Activity">
        <item name="android:activityOpenEnterAnimation">@anim/activity_up_in</item>
        <item name="android:activityOpenExitAnimation">@anim/activity_up_out</item>
    </style>

    <!--电影详情页-->
    <style name="MyScrollPage" parent="Theme.AppCompat.Light.NoActionBar">
        <!--选中状态icon的颜色和字体颜色-->
        <item name="colorPrimary">@color/colorTheme</item>
        <item name="colorPrimaryDark">@color/colorTheme</item>
        <item name="colorAccent">@color/colorTheme</item>
        <item name="android:windowAnimationStyle">@style/default_animation_down</item>
    </style>


    <!--查看大图页面，全屏显示-->
    <style name="ViewBigPicTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/colorTheme</item>
        <item name="colorPrimaryDark">@color/colorTheme</item>
        <item name="colorAccent">@color/colorTheme</item>
        <item name="android:windowFullscreen">true</item>
        <item name="android:windowAnimationStyle">@style/default_animation_up</item>
    </style>


    <!--titleBar样式-->
    <style name="ToolbarStyle" parent="@style/ThemeOverlay.AppCompat.Dark.ActionBar">
        <item name="actionBarItemBackground">@drawable/toolbarItemBackground</item>
        <item name="selectableItemBackground">@drawable/toolbarItemBackground</item>
        <item name="titleTextAppearance">@style/ToolBar.Title</item>
        <item name="subtitleTextAppearance">@style/Toolbar.SubTitle</item>
        <item name="android:windowNoTitle">true</item>
        <!--<item name="android:textSize">18sp</item> &lt;!&ndash;  搞掂字体大小&ndash;&gt;-->
    </style>

    <!--titlebar 标题-->
    <style name="ToolBar.Title" parent="@style/TextAppearance.Widget.AppCompat.Toolbar.Title">
        <item name="android:textSize">18.0sp</item>
        <item name="android:textColor">@color/colorWhite</item>
    </style>

    <!--titlebar 副标题-->
    <style name="Toolbar.SubTitle" parent="@style/TextAppearance.Widget.AppCompat.Toolbar.Subtitle">
        <item name="android:textSize">9.0sp</item>
        <item name="android:textColor">#99ffffff</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <!--alertDialog -->
    <style name="alert_dialog" parent="android:Theme.Dialog">
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowIsTranslucent">false</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowFullscreen">false</item>
        <item name="android:windowBackground">@color/float_transparent</item>
        <item name="android:windowAnimationStyle">@null</item>
        <item name="android:backgroundDimEnabled">true</item>
        <item name="android:backgroundDimAmount">0.4</item>
    </style>

    <style name="dialog_blue_button" parent="android:Widget.Button">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">31dp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:layout_marginRight">10dp</item>
        <item name="android:layout_marginLeft">10dp</item>
        <item name="android:background">@drawable/blue_button_background</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/button_text_color</item>
    </style>


    <style name="BottomSheet.StyleDialog" parent="BottomSheet.Dialog">
        <item name="android:backgroundDimAmount">0.5</item>
        <item name="android:windowAnimationStyle">@style/BottomSheet.Animation</item>
        <item name="android:textColorPrimary">@color/colorTitle</item>
        <item name="android:textColorSecondary">@color/colorSubtitle</item>
        <item name="android:textSize">15sp</item>
        <item name="android:textColorHint">#42ffffff</item>
        <item name="bs_dialogBackground">@color/colorWhite</item>
        <item name="bs_dividerColor">@color/colorLine</item>
        <item name="bs_numColumns">5</item>
        <item name="bs_listStyle">@style/BottomSheet.List</item>
    </style>
    <style name="navMenuStyle">
        <item name="android:layout_marginTop">@dimen/dp_8</item>
        <item name="android:layout_marginBottom">@dimen/dp_8</item>
        <item name="android:layout_marginStart" >@dimen/dp_16</item>
        <item name="android:layout_marginEnd" >@dimen/dp_16</item>
    </style>

</resources>
